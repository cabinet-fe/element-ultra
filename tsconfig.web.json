{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-define-options/macros-global"],
    "skipLibCheck": true
  },
  "include": ["packages/**/*", "typings/components.d.ts", "typings/env.d.ts"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "**/*.md"
  ]
}